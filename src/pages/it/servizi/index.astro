---
// Pagina servizi con URL italiano che legge contenuto MDX dalla collection "pages"
import Base from '../../../layouts/Base.astro'
import { getEntry, render, getCollection } from 'astro:content'

// I file italiani sono nella root della collection pages - cerchiamo 'servizi' non 'services'
const page = await getEntry('pages', 'servizi')
const Content = page ? (await render(page)).Content : null
---

<Base title={page?.data?.title ?? 'Servizi'} description={page?.data?.excerpt ?? 'Servizi di consulenza IT'}>
  {Content && (
    <section class="py-16 sm:py-20">
      <div class="mx-auto max-w-[1366px] px-4 sm:px-6 lg:px-8">
        <Content />
      </div>
    </section>
  )}
</Base>
