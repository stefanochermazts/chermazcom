---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
---
<DefaultLayout title="Contatti">
  <section class="container my-16">
    <h1 class="text-6xl mb-8">Contattami</h1>
    <form
      name="contact"
      method="POST"
      action="/it/contact/success/"
      data-netlify="true"
      netlify-honeypot="bot-field"
      class="grid gap-6 max-w-2xl"
    >
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label>Non compilare questo campo: <input name="bot-field" /></label>
      </p>

      <div>
        <label for="nome" class="block mb-2">Nome</label>
        <input id="nome" name="nome" type="text" required class="w-full border p-3 rounded" />
      </div>

      <div>
        <label for="email" class="block mb-2">Email</label>
        <input id="email" name="email" type="email" required class="w-full border p-3 rounded" />
      </div>

      <div>
        <label for="messaggio" class="block mb-2">Messaggio</label>
        <textarea id="messaggio" name="messaggio" rows="6" required class="w-full border p-3 rounded"></textarea>
      </div>

      <div class="flex items-start gap-3">
        <input id="privacy" name="privacy" type="checkbox" required />
        <label for="privacy">Ho letto e accetto lâ€™informativa privacy.</label>
      </div>

      <div>
        <button type="submit" class="button">Invia</button>
      </div>
    </form>
  </section>
</DefaultLayout>


