    title="IT svetovalne storitve"
    subtitle="Celovite rešitve za digitalno preobrazbo vašega podjetja"
    servicesLinkBase="/sl/storitve/"
    bottomCtaText="Zahtevaj posvet"
    bottomCtaHref="/sl/kontakt/"
    services={[
      { icon: 'consulting', title: 'Strateško IT svetovanje', description: 'Analiza, načrtovanje in izvedba digitalnih rešitev po meri vašega podjetja.', features: ['Digitalna strategija', 'Tehnološka ocena', 'Tehnološki načrt', 'Upravljanje sprememb'], cta: 'Več informacij' },
      { icon: 'microsoft365', title: 'Microsoft 365 & SharePoint', description: 'Celovit Modern Workplace: intranet, sodelovanje, upravljanje in varnost podatkov.', features: ['Korporativni intraneti', 'Teams Governance', 'SharePoint Online', 'Power Platform'], cta: 'M365 projekti' },
      { icon: 'ai', title: 'AI & Avtomatizacija', description: 'Uporabna AI: chatbot-i, inteligentne avtomatizacije in AI integracija.', features: ['Custom Chatbots', 'OpenAI integracija', 'Avtomatizacija procesov', 'RAG sistemi'], cta: 'AI rešitve' },
      { icon: 'compliance', title: 'Skladnost & Upravljanje', description: 'GDPR, upravljanje podatkov, varnost in regulativna skladnost vaše organizacije.', features: ['GDPR ocena', 'Upravljanje podatkov', 'Varnostne politike', 'Revizija & pregled'], cta: 'Skladnost' }
    ]}
  />
  <Expertise 
    title="Znanja & Specializacije"
    subtitle="Napredne tehnologije in metode za preobrazbo vašega poslovanja"
    ctaText="Oglej si vse storitve"
    ctaHref="/sl/storitve/"
    areas={[
      { icon: 'microsoft', title: 'Microsoft 365 & SharePoint', description: 'Modern Workplace, korporativni intraneti, upravljanje in varnost', highlights: ['SharePoint Online', 'Power Platform', 'Teams', 'Viva Suite'] },
      { icon: 'ai', title: 'Umetna inteligenca', description: 'Chatbot-i, inteligentne avtomatizacije in AI integracija v procese', highlights: ['Azure OpenAI', 'M365 Copilot', 'Custom GPT', 'RAG sistemi'] },
      { icon: 'security', title: 'Skladnost & Varnost', description: 'GDPR, upravljanje podatkov in varnostni okviri', highlights: ['GDPR ocena', 'Klasifikacija podatkov', 'DLP politike', 'Revizija & pregled'] },
      { icon: 'automation', title: 'Avtomatizacija procesov', description: 'Power Automate, delovni tokovi in operativna optimizacija', highlights: ['Power Automate', 'Logic Apps', 'Process Mining', 'RPA rešitve'] }
    ]}
  />
  <CaseStudies 
    items={recentCaseStudies} 
    baseUrl="/sl/case-studies" 
    title="Študije primerov" 
    subtitle="Izvedeni projekti z merljivimi rezultati in konkretnim vplivom"
    allProjectsLabel="Vsi projekti"
  />
