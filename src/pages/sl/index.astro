    items={recentInsights} 
    baseUrl="/sl/insights" 
    title="Zadnji vpogledi" 
    subtitle="Tehnični članki, vodniki in dobre prakse iz mojega bloga"
    allArticlesLabel="Vsi članki"
    locale="sl-SI"
  />
  <Testimonials 
    title="Pričevanja"
    items={[
      { author: 'CTO, MSP', quote: 'Takojšen vpliv na dostavo in kakovost.' },
      { author: 'Marketing vodja', quote: 'Učinkoviti in blagovni znamki prilagojeni chatbot-i.' },
      { author: 'IT Manager', quote: 'M365 intranet uporablja 100% ekipe.' }
    ]}
