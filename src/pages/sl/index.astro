---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import Hero from '../../components/Home/Hero.astro'
import About from '../../components/Home/About.astro'
import Services from '../../components/Home/Services.astro'
import Expertise from '../../components/Home/Expertise.astro'
import CaseStudies from '../../components/Home/CaseStudies.astro'
import LatestInsights from '../../components/Home/LatestInsights.astro'
import Testimonials from '../../components/Home/Testimonials.astro'
import Contact from '../../components/Home/Contact.astro'
import { getCollection } from 'astro:content'
import sl from '../../i18n/sl.json'

// Dati per la pillar page - contenuti sloveni
const latestInsights = await getCollection('insights', ({ id }) => 
  id.startsWith('sl-')
)
const recentInsights = latestInsights
  .filter(post => post.data.status === 'publish')
  .sort((a, b) => new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime())
  .slice(0, 3)

const featuredCaseStudies = await getCollection('caseStudies', ({ id }) => 
  id.startsWith('sl-')
)
const recentCaseStudies = featuredCaseStudies
  .sort((a, b) => new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime())
  .slice(0, 3)
---

<DefaultLayout title={sl.pages.home.title} description={sl.pages.home.description}>
  <Hero eyebrow={sl.pages.home.hero.eyebrow} title={sl.pages.home.hero.title} subtitle={sl.pages.home.hero.subtitle} primary={{ href: '/sl/storitve/', label: sl.pages.home.hero.primaryLabel }} secondary={{ href: '/sl/case-studies/', label: sl.pages.home.hero.secondaryLabel }} />
  <About 
    title={sl.pages.home.about.title}
    lead={sl.pages.home.about.lead}
    paragraph={sl.pages.home.about.paragraph}
    tags={sl.pages.home.about.tags}
    linkHref={sl.pages.home.about.linkHref}
    linkText={sl.pages.home.about.linkText}
    photoLabel={sl.pages.home.about.photoLabel}
    photoName={sl.pages.home.about.photoName}
    yearsBadgeValue={sl.pages.home.about.yearsBadgeValue}
    yearsBadgeSubtitle={sl.pages.home.about.yearsBadgeSubtitle}
    imageSrc={sl.pages.home.about.imageSrc}
    imageAlt={sl.pages.home.about.imageAlt}
    imageAspectClass={sl.pages.home.about.imageAspectClass}
  />
  <Services 
    title={sl.pages.home.services.title}
    subtitle={sl.pages.home.services.subtitle}
    servicesLinkBase={sl.pages.home.services.servicesLinkBase}
    bottomCtaText={sl.pages.home.services.bottomCtaText}
    bottomCtaHref={sl.pages.home.services.bottomCtaHref}
    services={sl.pages.home.services.items}
  />
  <Expertise 
    title={sl.pages.home.expertise.title}
    subtitle={sl.pages.home.expertise.subtitle}
    ctaText={sl.pages.home.expertise.ctaText}
    ctaHref={sl.pages.home.expertise.ctaHref}
    areas={sl.pages.home.expertise.areas}
  />
  <CaseStudies 
    items={recentCaseStudies} 
    baseUrl="/sl/case-studies" 
    title={sl.pages.home.caseStudies.title} 
    subtitle={sl.pages.home.caseStudies.subtitle}
    allProjectsLabel={sl.pages.home.caseStudies.allProjectsLabel}
  />
  <LatestInsights 
    items={recentInsights} 
    baseUrl="/sl/insights" 
    title={sl.pages.home.latestInsights.title} 
    subtitle={sl.pages.home.latestInsights.subtitle}
    allArticlesLabel={sl.pages.home.latestInsights.allArticlesLabel}
    locale={sl.pages.home.latestInsights.locale}
  />
  <Testimonials 
    title={sl.pages.home.testimonials.title}
    items={sl.pages.home.testimonials.items}
  />
  <Contact />
</DefaultLayout>
