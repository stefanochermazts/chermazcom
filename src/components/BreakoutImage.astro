---
// Rimuoviamo astro:assets per fallback robusto

/**
 * BreakoutImage Component
 *
 * @description A component for displaying a landscape image that breaks out of the container
 */
interface Props {
  /**
   * The image source
   */
  src?: string
  /**
   * The image alt text
   */
  alt: string
}

const { src = '', alt = '' } = Astro.props
const fallbackSrc = '/images/logo_stefano_chermaz.png'
const finalSrc = (typeof src === 'string' && src.trim().length > 0) ? src : fallbackSrc
---

<div class="relative -mx-4 my-8 md:-mx-8 lg:-mx-[120px]">
  <img src={finalSrc} alt={alt} class="h-auto w-full rounded-lg object-cover" loading="lazy" />
  <div class="absolute inset-0 rounded-lg shadow-inner"></div>
</div>
