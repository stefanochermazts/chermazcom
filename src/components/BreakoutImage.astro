---
// Rimuoviamo astro:assets per fallback robusto

/**
 * BreakoutImage Component
 *
 * @description A component for displaying a landscape image that breaks out of the container
 */
interface Props {
  /**
   * The image source
   */
  src?: string
  /**
   * The image alt text
   */
  alt: string
}

const { src = '', alt = '' } = Astro.props
const fallbackSrc = '/images/logo_stefano_chermaz.png'
const finalSrc = (typeof src === 'string' && src.trim().length > 0) ? src : fallbackSrc
---

<div class="my-6">
  <div class="relative aspect-[16/9] overflow-hidden rounded-md bg-zinc-100 dark:bg-zinc-900">
    <img src={finalSrc} alt={alt} class="h-full w-full object-cover" loading="lazy" decoding="async" sizes="(min-width:1024px) 60vw, 100vw" />
  </div>
</div>
