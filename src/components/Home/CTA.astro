---
const { title = 'Parliamo del tuo progetto', subtitle = 'Scrivimi e pianifichiamo una call.', href = '/it/contact/', label = 'Contattami' } = Astro.props
---
<section class="py-24">
	<div class="container text-center">
		<h2 class="text-5xl mb-4">{title}</h2>
		<p class="text-2xl mb-8">{subtitle}</p>
		<a class="button" href={href}>{label}</a>
	</div>
</section>
