---
/**
 * About Component - Sezione chi sono per la homepage
 */
interface Props {
  title?: string
  lead?: string
  paragraph?: string
  tags?: string[]
  linkHref?: string
  linkText?: string
  photoLabel?: string
  photoName?: string
  yearsBadgeValue?: string
  yearsBadgeSubtitle?: string
  imageSrc?: string
  imageAlt?: string
  imageAspectClass?: string
}

const {
  title = 'Chi sono',
  lead = 'Sono <strong>Stefano Chermaz</strong>, CTO e consulente IT specializzato in <strong>Microsoft 365</strong>, <strong>intelligenza artificiale</strong> e <strong>compliance aziendale</strong>.',
  paragraph = 'Con oltre <strong>15 anni di esperienza</strong>, aiuto le aziende a trasformare i loro processi digitali attraverso soluzioni moderne, sicure e scalabili. Dal Modern Workplace alle automazioni AI, ogni progetto è progettato per generare valore concreto e misurabile.',
  tags = ['Microsoft 365', 'Intelligenza Artificiale', 'GDPR & Compliance', 'SharePoint & Power Platform'],
  linkHref = '/it/chi-sono/',
  linkText = 'Scopri di più su di me',
  photoLabel = 'Foto professionale',
  photoName = 'Stefano Chermaz',
  yearsBadgeValue = '15+ anni',
  yearsBadgeSubtitle = 'di esperienza',
  imageSrc = '',
  imageAlt = 'Stefano Chermaz',
  imageAspectClass = 'aspect-[4/3]'
} = Astro.props as Props
---

<section class="pt-16 sm:pt-20 bg-zinc-50 dark:bg-zinc-900/50">
  <div class="mx-auto max-w-[1366px] px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
      <!-- Testo About -->
      <div class="lg:col-span-2">
        <h2 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-50 sm:text-4xl mb-6">
          {title}
        </h2>
        <div class="prose prose-lg text-zinc-700 dark:text-zinc-300">
          <p class="text-xl leading-8 mb-6" set:html={lead} />
          <p class="mb-6" set:html={paragraph} />
          <div class="flex flex-wrap gap-3 mb-8">
            {tags.map((t) => (
              <span class="inline-flex items-center rounded-full bg-brand-100 dark:bg-brand-900/30 px-3 py-1 text-sm font-medium text-brand-700 dark:text-brand-300">{t}</span>
            ))}
          </div>
          <a 
            href={linkHref}
            class="inline-flex items-center text-brand-600 hover:text-brand-500 font-semibold group"
          >
            {linkText}
            <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Immagine/Placeholder -->
      <div class="relative">
        <div class={`${imageAspectClass} rounded-2xl bg-gradient-to-br from-brand-100 to-brand-200 dark:from-brand-900/20 dark:to-brand-800/20 overflow-hidden`}>
          {imageSrc && imageSrc.trim().length > 0 ? (
            <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover" loading="lazy" />
          ) : (
            <div class="w-full h-full flex items-center justify-center">
              <div class="text-center text-zinc-600 dark:text-zinc-400">
                <svg class="mx-auto h-16 w-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <p class="text-sm font-medium">{photoLabel}</p>
                <p class="text-xs opacity-75 mt-1">{photoName}</p>
              </div>
            </div>
          )}
        </div>
        
        <!-- Badge floating -->
        <div class="absolute -bottom-4 -right-4 bg-white dark:bg-zinc-800 rounded-xl p-4 shadow-lg ring-1 ring-black/5 dark:ring-white/10">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-semibold text-zinc-900 dark:text-zinc-50">{yearsBadgeValue}</p>
              <p class="text-xs text-zinc-600 dark:text-zinc-400">{yearsBadgeSubtitle}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

