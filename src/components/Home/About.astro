---
/**
 * About Component - Sezione chi sono per la homepage
 */
interface Props {
  title?: string
  lead?: string
  paragraph?: string
  tags?: string[]
  linkHref?: string
  linkText?: string
}

const {
  title = 'Chi sono',
  lead = 'Sono <strong>Stefano Chermaz</strong>, CTO e consulente IT specializzato in <strong>Microsoft 365</strong>, <strong>intelligenza artificiale</strong> e <strong>compliance aziendale</strong>.',
  paragraph = 'Con oltre <strong>15 anni di esperienza</strong>, aiuto le aziende a trasformare i loro processi digitali attraverso soluzioni moderne, sicure e scalabili. Dal Modern Workplace alle automazioni AI, ogni progetto è progettato per generare valore concreto e misurabile.',
  tags = ['Microsoft 365', 'Intelligenza Artificiale', 'GDPR & Compliance', 'SharePoint & Power Platform'],
  linkHref = '/it/chi-sono/',
  linkText = 'Scopri di più su di me'
} = Astro.props as Props
---

<section class="py-16 sm:py-20 bg-zinc-50 dark:bg-zinc-900/50">
  <div class="mx-auto max-w-[1366px] px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      <h2 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-50 sm:text-4xl mb-6">
        {title}
      </h2>
      <div class="prose prose-lg text-zinc-700 dark:text-zinc-300">
        <p class="text-xl leading-8 mb-6" set:html={lead} />
        <p class="mb-6" set:html={paragraph} />
        <div class="flex flex-wrap gap-3 mb-8">
          {tags.map((t) => (
            <span class="inline-flex items-center rounded-full bg-brand-100 dark:bg-brand-900/30 px-3 py-1 text-sm font-medium text-brand-700 dark:text-brand-300">{t}</span>
          ))}
        </div>
        <a 
          href={linkHref}
          class="inline-flex items-center text-brand-600 hover:text-brand-500 font-semibold group"
        >
          {linkText}
          <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

