---
const { items = [] } = Astro.props
---
<section class="py-24">
	<div class="container">
		<h2 class="text-5xl mb-12">Servizi</h2>
		<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
			{(items.length ? items : [
				{ title: 'Consulenza IT', description: 'Strategia e delivery' },
				{ title: 'SharePoint & M365', description: 'Intranet e collaboration' },
				{ title: 'AI & Chatbot', description: 'Assistenti e automazioni' },
			]).map((s) => (
				<article class="p-6 rounded-2xl border">
					<h3 class="text-2xl mb-2">{s.title}</h3>
					<p class="text-lg">{s.description}</p>
				</article>
			))}
		</div>
	</div>
</section>
