---
const { items = [] } = Astro.props
---
<section class="py-16 sm:py-20">
	<div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
		<h2 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-50 sm:text-4xl">Servizi</h2>
		<div class="mt-10 grid grid-cols-1 gap-6 md:grid-cols-3">
			{(items.length ? items : [
				{ title: 'Consulenza IT', description: 'Strategia e delivery' },
				{ title: 'SharePoint & M365', description: 'Intranet e collaboration' },
				{ title: 'AI & Chatbot', description: 'Assistenti e automazioni' },
			]).map((s) => (
				<article class="rounded-2xl shadow-sm ring-1 ring-black/5 bg-white dark:bg-zinc-900 p-6">
					<h3 class="text-xl font-semibold text-zinc-900 dark:text-zinc-50 mb-1">{s.title}</h3>
					<p class="text-zinc-700 dark:text-zinc-300">{s.description}</p>
				</article>
			))}
		</div>
	</div>
</section>
