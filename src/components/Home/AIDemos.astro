---
/**
 * AIDemos Component - Sezione dimostrazioni AI
 */
interface Props {
  title?: string
  subtitle?: string
  ctaText?: string
  ctaHref?: string
  playgroundTitle?: string
  playgroundDescription?: string
  playgroundHref?: string
}

const {
  title = 'Dimostrazioni AI',
  subtitle = 'Scopri le potenzialità dell\'intelligenza artificiale applicata allo sviluppo',
  ctaText = 'Esplora tutte le demo',
  ctaHref = '/it/ai-demos/',
  playgroundTitle = 'AI Code Playground',
  playgroundDescription = 'Analizza e ottimizza il tuo codice con l\'intelligenza artificiale. Incolla uno snippet e scopri come migliorarlo.',
  playgroundHref = '/it/ai-playground/'
} = Astro.props
---

<section class="py-16 sm:py-20 bg-gradient-to-br from-blue-50 via-zinc-50 to-brand-50 dark:from-zinc-900 dark:via-zinc-900 dark:to-zinc-800">
  <div class="mx-auto max-w-[1366px] px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-50 sm:text-4xl mb-4">
        {title}
      </h2>
      <p class="text-xl text-zinc-600 dark:text-zinc-400 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Demo Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      
      <!-- Code Playground -->
      <div class="group relative overflow-hidden rounded-2xl bg-white dark:bg-zinc-900 shadow-sm ring-1 ring-black/5 dark:ring-white/10 hover:shadow-xl transition-all duration-300">
        <!-- Background gradient -->
        <div class="absolute inset-0 bg-gradient-to-br from-brand-500/10 to-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Content -->
        <div class="relative p-8">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-brand-100 dark:bg-brand-900/30 mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-brand-600 dark:text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          
          <!-- Badge -->
          <div class="inline-flex items-center rounded-full bg-green-100 dark:bg-green-900/30 px-3 py-1 mb-4">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
            <span class="text-xs font-medium text-green-700 dark:text-green-300">Disponibile</span>
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-semibold text-zinc-900 dark:text-zinc-50 mb-3 group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors">
            {playgroundTitle}
          </h3>
          
          <!-- Description -->
          <p class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed mb-6">
            {playgroundDescription}
          </p>
          
          <!-- Features -->
          <div class="space-y-2 mb-6">
            <div class="flex items-center text-xs text-zinc-500 dark:text-zinc-400">
              <svg class="w-3 h-3 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Analisi automatica del codice
            </div>
            <div class="flex items-center text-xs text-zinc-500 dark:text-zinc-400">
              <svg class="w-3 h-3 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Ottimizzazione intelligente
            </div>
            <div class="flex items-center text-xs text-zinc-500 dark:text-zinc-400">
              <svg class="w-3 h-3 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Supporto multi-linguaggio
            </div>
          </div>
          
          <!-- CTA -->
          <a 
            href={playgroundHref}
            class="inline-flex items-center text-brand-600 hover:text-brand-500 font-semibold text-sm group/link"
          >
            Prova ora
            <svg class="ml-2 h-4 w-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Coming Soon Demo 1 -->
      <div class="group relative overflow-hidden rounded-2xl bg-white dark:bg-zinc-900 shadow-sm ring-1 ring-black/5 dark:ring-white/10 opacity-75">
        <div class="relative p-8">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-zinc-100 dark:bg-zinc-800 mb-6">
            <svg class="w-6 h-6 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          
          <!-- Badge -->
          <div class="inline-flex items-center rounded-full bg-amber-100 dark:bg-amber-900/30 px-3 py-1 mb-4">
            <span class="text-xs font-medium text-amber-700 dark:text-amber-300">Prossimamente</span>
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-semibold text-zinc-900 dark:text-zinc-50 mb-3">
            AI Documentation Generator
          </h3>
          
          <!-- Description -->
          <p class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed mb-6">
            Genera automaticamente documentazione completa per il tuo codice. Commenti, README e guide API create dall'intelligenza artificiale.
          </p>
          
          <!-- Features -->
          <div class="space-y-2 mb-6">
            <div class="flex items-center text-xs text-zinc-400">
              <svg class="w-3 h-3 text-zinc-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Documentazione automatica
            </div>
            <div class="flex items-center text-xs text-zinc-400">
              <svg class="w-3 h-3 text-zinc-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Multiple output formats
            </div>
            <div class="flex items-center text-xs text-zinc-400">
              <svg class="w-3 h-3 text-zinc-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Customizable templates
            </div>
          </div>
        </div>
      </div>

      <!-- Coming Soon Demo 2 -->
      <div class="group relative overflow-hidden rounded-2xl bg-white dark:bg-zinc-900 shadow-sm ring-1 ring-black/5 dark:ring-white/10 opacity-75">
        <div class="relative p-8">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-zinc-100 dark:bg-zinc-800 mb-6">
            <svg class="w-6 h-6 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          
          <!-- Badge -->
          <div class="inline-flex items-center rounded-full bg-amber-100 dark:bg-amber-900/30 px-3 py-1 mb-4">
            <span class="text-xs font-medium text-amber-700 dark:text-amber-300">Prossimamente</span>
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-semibold text-zinc-900 dark:text-zinc-50 mb-3">
            Smart Code Translator
          </h3>
          
          <!-- Description -->
          <p class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed mb-6">
            Converti automaticamente codice tra diversi linguaggi di programmazione mantenendo la logica e le best practices.
          </p>
          
          <!-- Features -->
          <div class="space-y-2 mb-6">
            <div class="flex items-center text-xs text-zinc-400">
              <svg class="w-3 h-3 text-zinc-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Cross-language conversion
            </div>
            <div class="flex items-center text-xs text-zinc-400">
              <svg class="w-3 h-3 text-zinc-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Logic preservation
            </div>
            <div class="flex items-center text-xs text-zinc-400">
              <svg class="w-3 h-3 text-zinc-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Best practices adaptation
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="text-center">
      <p class="text-zinc-600 dark:text-zinc-400 mb-6">
        Interessato a vedere come l'AI può trasformare il tuo workflow di sviluppo?
      </p>
      <a 
        href={ctaHref}
        class="inline-flex items-center rounded-lg bg-brand-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-brand-500 focus:outline-2 focus:outline-offset-2 focus:outline-brand-500 transition-colors"
      >
        {ctaText}
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
