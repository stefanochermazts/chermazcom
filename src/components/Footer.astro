---
import { getLocaleFromUrl, t, getLocalizedRoute } from '../utils/i18n'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
const locale = getLocaleFromUrl(Astro.url)

// Link localizzati
const privacyUrl = getLocalizedRoute('/privacy/', locale)
const cookiePolicyUrl = getLocalizedRoute('/cookie-policy/', locale)
const contactUrl = getLocalizedRoute('/contatti/', locale)
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-main">
      <div class="footer-brand">
        <h3 class="footer-title">Stefano Chermaz</h3>
        <p class="footer-description">
          Consulente IT specializzato in Microsoft 365, AI e Compliance. 
          Soluzioni digitali moderne per aziende che guardano al futuro.
        </p>
      </div>
      
      <div class="footer-links">
        <div class="footer-section">
          <h4 class="footer-section-title">Servizi</h4>
          <ul class="footer-nav">
            <li><a href={getLocalizedRoute('/servizi/', locale)}>Consulenza IT</a></li>
            <li><a href={getLocalizedRoute('/servizi/', locale)}>Microsoft 365</a></li>
            <li><a href={getLocalizedRoute('/servizi/', locale)}>AI & Automazione</a></li>
            <li><a href={getLocalizedRoute('/servizi/', locale)}>Compliance GDPR</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h4 class="footer-section-title">Risorse</h4>
          <ul class="footer-nav">
            <li><a href={getLocalizedRoute('/insights/', locale)}>Blog & Insights</a></li>
            <li><a href={getLocalizedRoute('/case-studies/', locale)}>Case Studies</a></li>
            <li><a href={getLocalizedRoute('/chi-sono/', locale)}>Chi sono</a></li>
            <li><a href={contactUrl}>Contatti</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h4 class="footer-section-title">Legale & Privacy</h4>
          <ul class="footer-nav">
            <li><a href={privacyUrl}>Privacy Policy</a></li>
            <li><a href={cookiePolicyUrl}>Cookie Policy</a></li>
            <li>
              <button 
                type="button" 
                onclick="if(typeof showCookiePreferences === 'function') { showCookiePreferences(); }" 
                class="footer-cookie-btn"
                title="Gestisci le tue preferenze cookie"
              >
                üç™ Gestisci Cookie
              </button>
            </li>
            <li>
              <button 
                type="button" 
                onclick="if(typeof revokeCookieConsent === 'function') { revokeCookieConsent(); }" 
                class="footer-revoke-btn"
                title="Revoca il consenso per tutti i cookie non necessari"
              >
                ‚ùå Revoca Consenso
              </button>
            </li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="footer-copyright">
          ¬© {currentYear} Stefano Chermaz. Tutti i diritti riservati.
        </p>
        <div class="footer-compliance">
          <span class="compliance-badge" title="Sito web conforme GDPR">
            üîí GDPR Compliant
          </span>
          <span class="compliance-badge" title="Cookie utilizzati solo con il tuo consenso">
            üç™ Cookie Consent
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(135deg, rgb(17 24 39) 0%, rgb(31 41 55) 100%);
    color: rgb(243 244 246);
    margin-top: auto;
  }

  .darkmode .footer {
    background: linear-gradient(135deg, rgb(9 9 11) 0%, rgb(24 24 27) 100%);
  }

  .footer-content {
    max-width: 1366px;
    margin: 0 auto;
    padding: 3rem 1rem 1rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr 2fr;
      gap: 3rem;
    }
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: rgb(249 250 251);
  }

  .footer-description {
    margin: 0;
    line-height: 1.6;
    color: rgb(209 213 219);
  }

  .footer-links {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .footer-links {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .footer-section-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: rgb(249 250 251);
  }

  .footer-nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-nav a {
    color: rgb(209 213 219);
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .footer-nav a:hover {
    color: rgb(249 250 251);
  }

  .footer-cookie-btn,
  .footer-revoke-btn {
    background: none;
    border: none;
    color: rgb(209 213 219);
    cursor: pointer;
    font-size: 0.875rem;
    text-align: left;
    padding: 0;
    transition: color 0.2s ease;
    line-height: 1.5;
  }

  .footer-cookie-btn:hover,
  .footer-revoke-btn:hover {
    color: rgb(249 250 251);
  }

  .footer-bottom {
    border-top: 1px solid rgb(55 65 81);
    padding-top: 1.5rem;
  }

  .footer-bottom-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 640px) {
    .footer-bottom-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer-copyright {
    margin: 0;
    font-size: 0.875rem;
    color: rgb(156 163 175);
  }

  .footer-compliance {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .compliance-badge {
    font-size: 0.75rem;
    background: rgba(31, 99, 255, 0.1);
    color: rgb(147 197 253);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    border: 1px solid rgba(31, 99, 255, 0.2);
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  @media (max-width: 640px) {
    .footer-compliance {
      justify-content: center;
    }
  }
</style>
