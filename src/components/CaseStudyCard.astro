---
import type { CollectionEntry } from 'astro:content'

interface Props {
  caseStudy: CollectionEntry<'caseStudies'>
  baseUrl?: string
}

const { caseStudy, baseUrl = '/it/case-studies' } = Astro.props
const rawSlug = caseStudy.slug ?? caseStudy.id.replace(/\.mdx?$/, '')
const normalizedSlug = rawSlug.replace(/^(it|en|sl)\//, '')
const href = `${baseUrl}/${normalizedSlug}/`

// Image selection logic for case studies
function getImageSrc(data: any, normalized: string) {
  // Try card-specific format first
  const cardPath = `/case-studies/${normalized}/card.webp`
  
  // For now, assume card.webp exists (generated by script)
  // Could add existence check here if needed
  
  // Then try from frontmatter
  const fmCandidates = [data.image, data.ogImage, data.featuredImage]
  for (const candidate of fmCandidates) {
    if (typeof candidate === 'string' && candidate.trim().length > 0) {
      // Prefer card format if it follows the pattern
      if (candidate.includes('/case-studies/')) {
        const basePath = candidate.substring(0, candidate.lastIndexOf('/'))
        return `${basePath}/card.webp`
      }
      return candidate.trim()
    }
  }
  
  // Finally fallback
  return '/images/logo_stefano_chermaz.png'
}

const image = getImageSrc(caseStudy.data, normalizedSlug)
const date = caseStudy.data.date ? new Date(caseStudy.data.date) : null
const tags = (caseStudy.data.tags ?? []).slice(0, 3) // max 3 tags
const dateString = date ? date.toLocaleDateString('it-IT', { 
  day: 'numeric', 
  month: 'short', 
  year: 'numeric' 
}) : ''
const sector = caseStudy.data.sector
const mainKpi = Array.isArray(caseStudy.data.kpi) ? caseStudy.data.kpi[0] : caseStudy.data.kpi
---

<article class="surface surface-hover overflow-hidden">
  <div class="aspect-[4/3] overflow-hidden">
    <img 
      src={image} 
      alt={caseStudy.data.title} 
      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
  </div>
  
  <div class="p-6">
    {sector && (
      <div class="text-xs font-medium text-brand-600 dark:text-brand-400 mb-2 uppercase tracking-wide">
        {sector}
      </div>
    )}
    
    <h3 class="text-xl font-semibold mb-2">
      <a href={href} class="hover:text-brand-500 transition-colors">
        {caseStudy.data.title}
      </a>
    </h3>
    
    <p class="opacity-80 text-base mb-3">
      {caseStudy.data.excerpt ?? ''}
    </p>
    
    {mainKpi && (
      <p class="text-sm font-medium text-green-700 dark:text-green-400 mb-4">
        ðŸ“ˆ {mainKpi}
      </p>
    )}
    
    <div class="flex items-center justify-between text-sm">
      {dateString && (
        <time datetime={date?.toISOString()} class="text-gray-600 dark:text-gray-400">
          {dateString}
        </time>
      )}
      
      {tags.length > 0 && (
        <div class="flex gap-1 flex-wrap">
          {tags.map(tag => (
            <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded text-xs">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </div>
</article>

