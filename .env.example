# Ask Stefano Chatbot - Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Neon PostgreSQL Configuration (formato corretto)
DATABASE_URL=postgresql://username:password@ep-cool-darkness-123456.us-east-1.aws.neon.tech/neondb?sslmode=require
NEON_API_KEY=your-neon-api-key
NEON_PROJECT_ID=your-neon-project-id

# Local Development (Neon Local - opzionale)
LOCAL_DATABASE_URL=postgres://neon:npg@localhost:5432/ask_stefano?sslmode=require
USE_LOCAL_DB=false

# Vector Configuration
PGVECTOR_DIMENSION=1536
VECTOR_TABLE_NAME=content_embeddings

# Content Processing
CHUNK_SIZE=800
CHUNK_OVERLAP=200
MAX_RETRIEVAL_RESULTS=8

# LLM Response Configuration
MAX_RESPONSE_TOKENS=1000
CONFIDENCE_THRESHOLD=0.7
MAX_CITATIONS=4

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Logging and Analytics
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=true
LOG_RETENTION_DAYS=30

# Security
API_SECRET_KEY=your-secret-key-for-api-authentication

# Development
NODE_ENV=development
DEBUG_MODE=false
